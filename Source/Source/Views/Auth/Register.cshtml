@model DAO.TaiKhoanDAO
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<p>Đăng kí</p>
<form method="post">
    <div class="form-group clearfix text-danger">
        <i>@ViewBag.error</i>
    </div>
    <input type="hidden" value='2' name="user.QuyenHan" />
    <input type="hidden" value='true' name="user.KichHoat" />
    <div class="form-group form-material floating" data-plugin="formMaterial">
        <input type="text" class="form-control empty" autocomplete="off" value="@Model.TenTaiKhoan" id="txtName" name="user.TenTaiKhoan">
        <label class="floating-label" for="inputName">Tài khoản</label>
    </div>
    <div class="form-group form-material floating" data-plugin="formMaterial">
        <input type="password" class="form-control empty" autocomplete="off" id="txtPassword" name="user.MatKhau">
        <label class="floating-label" for="inputPassword">Mật khẩu</label>
    </div>
    <div class="form-group form-material floating" data-plugin="formMaterial">
        <input type="text" class="form-control empty" autocomplete="off" id="txtName" name="rePass">
        <label class="floating-label" for="inputName">Nhập lại mật khẩu</label>
    </div>
    <div class="form-group form-material floating" data-plugin="formMaterial">
        <input type="text" class="form-control empty" autocomplete="off" value="@Model.DiaChi" id="txtName" name="user.DiaChi">
        <label class="floating-label" for="inputName">Địa chỉ</label>
    </div>
    <div class="form-group form-material floating" data-plugin="formMaterial">
        <input type="text" class="form-control empty" autocomplete="off" value="@Model.SDT" onkeypress="return onlyNumber(event)" id="txtName" name="user.SDT">
        <label class="floating-label" for="inputName">Số điện thoại</label>
    </div>
    <div class="form-group form-material floating row" data-plugin="formMaterial">
        <div class="col-6">
            <label class="form-control-label">Giới tính *</label>
            <input type="checkbox" style="transform: scale(3);width:44px;" name="GioiTinh" @if (Model.GioiTinh) { <text> checked</text> } />
            <label for="TrangThai">Nam</label>
        </div>


    </div>


    <button type="submit" class="btn btn-primary btn-block">Đăng kí</button>
</form>

