@model  List<DAO.LoaiSanPhamDAO>
@using Source.Configuration;
@{
    ViewBag.Title = "LoaiSanPham";
    Layout = "~/Views/Shared/_LayoutSanPham.cshtml";
}

<div class="title-menu">
    <h2>Thực Đơn</h2>
</div>
<div class="content-top">
    <div class="row" style="margin-bottom: 5%; ">
        @foreach(var item in Model)
            {
            <div class="col-4">
                <div class="product-item">
                    <a class="item-pro" href="@Url.Action("SanPham","SanPham", new {@MaLoaiSanPham = @item.MaLoaiSanPham})"><img src="@Url.Content( AppConfig.loadSP +item.HinhAnh)" alt=""></a>
                    <a class="item-btn" href="@Url.Action("SanPham","SanPham", new {@MaLoaiSanPham = @item.MaLoaiSanPham})">@item.TenLoaiSanPham</a>
                </div>
            </div>
        }
    </div>
</div>


