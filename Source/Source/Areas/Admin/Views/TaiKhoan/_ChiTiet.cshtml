@model DAO.TaiKhoanDAO
@using DAO;
@{
    List<ChiNhanhDAO> dsChiNhanh = (List<ChiNhanhDAO>)TempData["Boxes"];
}
<div class="panel-body container-fluid">
    <form autocomplete="off">
        <input type="hidden" value='@Model.MaTaiKhoan' id="MaChiPhi" />
        <div class="form-group form-material" data-plugin="formMaterial">
            <label class="form-control-label" for="TenTaiKhoan">Tên Tài Khoản</label>
            <input type="text" class="form-control required currency"  value='@Model.TenTaiKhoan' id="TenTaiKhoan" />
        </div>
        <div class="form-group form-material" data-plugin="formMaterial">
            <label class="form-control-label" for="MatKhau">Mật khẩu</label>
            <input type="number" class="form-control required" value='' id="MatKhau" />
        </div>
        <div class="form-group form-material" data-plugin="formMaterial">
            <label class="form-control-label" for="DiaChi">Địa chỉ</label>
            <input type="text" class="form-control required currency" value='@Model.DiaChi' id="DiaChi" />
        </div>
        
        
        <div class="form-group form-material" data-plugin="formMaterial">
            <label class="form-control-label" for="SDT">Số điện thoại</label>
            <input type="text" class="form-control required" value='@Model.SDT' id="SDT" />
        </div>
        <div class="form-group form-material" data-plugin="formMaterial">
            <label class="form-control-label" for="SDT">Số điện thoại</label>
            <input type="text" class="form-control required" value='@Model.SDT' id="SDT" />
        </div>




        <div class="form-group form-material" data-plugin="formMaterial">
            <label class="form-control-label" for="MaChiNhanh">Chi Nhánh</label>
            <select class="form-control" id="MaLoaiChiPhi" data-plugin="select2">
                <option @if (Model.MaChiNhanh.Equals(0)) { <text> selected</text> } value=''>-- Lựa chọn --</option>
                @for (int i = 0; i < dsChiNhanh.Count; i++)
                {
                    <option @if (dsChiNhanh[i].MaChiNhanh == Model.MaChiNhanh) { <text>selected</text> }  value='@dsChiNhanh[i].MaChiNhanh'>@dsChiNhanh[i].TenChiNhanh</option>
                }
            </select>
        </div>

        <div class="form-group form-material" data-plugin="formMaterial">
            <label class="form-control-label" for="QuyenHan">Quyền hạn</label>
            <select class="form-control required" id="QuyenHan" data-plugin="select2">
                <option @if (Model.QuyenHan == 0) { <text> selected</text> } value='0'>Admin</option>
                <option @if (Model.QuyenHan == 1) { <text> selected</text> } value='1'>Quản lí</option>
                <option @if (Model.QuyenHan == 2) { <text> selected</text> } value='2'>Nhân viên</option>
                <option @if (Model.QuyenHan == 3) { <text> selected</text> } value='3'>Khách Hàng</option>
            </select>
        </div>

    </form>
</div>

<script>
    $("#MaLoaiChiPhi").select2();
</script>