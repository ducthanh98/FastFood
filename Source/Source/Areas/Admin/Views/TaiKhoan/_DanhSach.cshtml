@model List<DAO.TaiKhoanDAO>
@{
    int pageFrom = ((ViewBag.pageNumber - 1) * ViewBag.pageSize) + 1;
}
<!-- Table -->
<div class="example-wrap">
    <div class="example table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="text-center">STT</th>
                    <th>Tên tài khoản</th>
                    <th>Địa Chỉ</th>
                    <th>Số Điện Thoại</th>
                    <th>Giới Tính</th>
                    <th>Quyền hạn</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Count > 0)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                        <tr @if (!Model[i].KichHoat) { <text> class="text-danger"</text> }>
                            <td class="text-center">@(pageFrom + i)</td>
                            <td>@Model[i].TenTaiKhoan</td>
                            <td>@Model[i].DiaChi</td>
                            <td>@Model[i].SDT</td>
                            <td>@if (Model[i].GioiTinh) {<text>Nam</text> } else { <text>Nữ</text> }</td>
                            <td>@if (@Model[i].QuyenHan == 1) { <text>Admin</text>} else if (@Model[i].QuyenHan == 2) {<text>Quản lý</text>} else if (@Model[i].QuyenHan == 3) {<text>Nhân viên</text>} else {<text>Khách hàng</text>}</td>
                            <td class="text-center">
                                <a class="icon wb-edit text-primary"></a> / <i class="icon wb-trash text-danger" aria-hidden="true" data-target="#confirm-modal" data-toggle="modal"></i>
                            </td>
                        </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center" colspan="7">Không có dữ liệu</td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
</div>
<!-- End Table -->
@{ Html.RenderAction("_Pagination", "Home", new { maxNumber = ViewBag.maxNumber, pageNumber = ViewBag.pageNumber });}

<script>
    var url_GetTb = '/Admin/ChiNhanh/_DanhSach';
    var url_GetMd = '/Admin/ChiNhanh/_ChiTiet';
    var url_InsertUpdate = '/Admin/Ajax/addOrUpdateBoxes';
</script>
